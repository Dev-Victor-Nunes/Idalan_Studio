<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f0fc"
    android:id="@+id/cadastro">


    <Button
        android:id="@+id/btCadReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#f7f0fc"
        android:drawableLeft="@drawable/return_icon"
        android:paddingLeft="10dp"
        android:text="Voltar"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Cadastre-se"
        android:textAlignment="center"
        android:textColor="#091c1a"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="416dp"
        android:layout_height="617dp"
        android:background="#c1c5c7"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Preencha seus Dados"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <!--OBJETOS COM ID PARA CONECTAR CRIAR EVENTOS EM JAVA-->

        <EditText
            android:id="@+id/txtCadNome"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/caixa_texto"
            android:drawableStart="@drawable/user_icon"
            android:drawablePadding="16dp"
            android:hint="Nome Completo"
            android:inputType="text"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/txtCadCpf"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/caixa_texto"
            android:drawableStart="@drawable/cpf_icon"
            android:drawablePadding="16dp"
            android:hint="CPF"
            android:inputType="text"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/numCadtel"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/caixa_texto"
            android:drawableStart="@drawable/tel_icon"
            android:drawablePadding="16dp"
            android:hint="Telefone"
            android:inputType="phone"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/txtCadEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/caixa_texto"
            android:drawableStart="@drawable/email_icon"
            android:drawablePadding="16dp"
            android:hint="E-mail"
            android:inputType="text"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/txtCadSenha"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/caixa_texto"
            android:drawableStart="@drawable/lock_icon"
            android:drawablePadding="16dp"
            android:hint="Senha"
            android:inputType="textPassword"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/txtCadConfirmar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/caixa_texto"
            android:drawableStart="@drawable/checked_senha"
            android:drawablePadding="16dp"
            android:hint="Confirme sua senha"
            android:inputType="textPassword"
            android:paddingLeft="15dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btCadSalvar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/botao_fundo_select"
            android:text="Salvar"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>